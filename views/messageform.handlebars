<div class="card">
    <div class="card-body">
        <h4>Message</h4>
        <input type="text" id="message" />
        <input type="button" onclick="onSumbitMessage()" class="btn btn-primary" value="Send Message" id="submit-message" />
    </div>
</div>
<script>
function onSumbitMessage()
{
    var message = document.getElementById("message").value;
    console.log("onSubmitMessage", message);

    var params = {       
        "messages": message,
        "post_id": 12       
    };

    fetch("/api/messages", {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        credentials: 'include',
        body: JSON.stringify(params),

    }).then(function(response) {
        return response.json();
    }).then(function(data) {
        console.log("Response", data);
        window.location.href = "/messages";
    });
    
}
</script>