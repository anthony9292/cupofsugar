
 {{#each products as |product|}}
    

        <div class="card">
            <div class="card-topper {{product.type}}">
                <h4>{{product.type}}</h4>
            </div>
            <div class="card-body">
                <h3>{{product.quantity}} of {{product.product}}</h3>
                <input value={{product.id}} class="product_id hidden"></input>
                <p><strong>Offered by:</strong> {{product.user.name}}</p>
                <p>{{product.description}}</p>     
                
                <p class="timestamp">Posted: {{product.createdAt}}</p>   
                <hr>             
                <input type="button" value="Send Message" class='renderMessageForm btn btn-primary'>
            </div>
        </div>
    
{{/each}}

<script src="./js/message.js"></script>