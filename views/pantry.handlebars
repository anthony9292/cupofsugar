<h2><i class="bi bi-basket"></i> {{user.name}}'s Pantry</h2>
    
<a href="/" title="Return to Market"> &#60; Return to Market</a>
 
{{#each pantry as |pantry|}}
    <div class="card">
        <div class="card-topper {{pantry.type}}">
            <h4>{{pantry.type}}</h4>
        </div>
        <div class="card-body">
            <h3>{{pantry.quantity}} of {{pantry.product}}</h3>
            <p>{{pantry.description}}</p>     
            <button type="button" class="btn btn-danger" id="delete-post"><i class="bi bi-eraser"></i> Delete</button>
        </div>
    </div>
{{/each}}